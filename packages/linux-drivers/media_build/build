. config/options $1

VER=`ls $BUILD/linux*/modules/lib/modules`

cd $PKG_BUILD
wget http://www.linuxtv.org/downloads/firmware/dvb-firmwares.tar.bz2 -O dvb-firmwares.tar.bz2.tmp
cd v4l/firmware/; tar xvfj ../../dvb-firmwares.tar.bz2.tmp
cd ../..

sed -i  -e "/^LATEST_TAR/s/-LATEST/-2012-05-25/g" linux/Makefile

LDFLAGS=‚Äù"

make VER=$VER SRCDIR=$(kernel_path) -C linux/ download
make VER=$VER SRCDIR=$(kernel_path) -C linux/ untar
make VER=$VER SRCDIR=$(kernel_path) allyesconfig
make VER=$VER SRCDIR=$(kernel_path)
